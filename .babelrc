{
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "chrome": 58,
        "ie": 10
      },
      "useBuiltIns": "usage",
      "corejs": 3
    }]
  ],
  "plugins": [
    ["@babel/plugin-transform-typescript", {
      "allowNamespaces": true
    }],
    "@babel/plugin-proposal-class-properties",
    "@babel/plugin-proposal-optional-chaining"
  ]
}